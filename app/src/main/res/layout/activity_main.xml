<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_Background">


    <Button
        android:id="@+id/bExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Exit"

        app:icon="@drawable/ic_arrow_down_left"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="739dp" />

    <Button
        android:id="@+id/bsignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SignIn"
        app:icon="@drawable/ic_arrow_up_right"
        app:iconGravity="textEnd"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="739dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="284dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/Email"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="76dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/Password"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="143dp" />

    <EditText
        android:id="@+id/txNick"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Nickname"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="215dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/FullName"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="215dp" />

    <CheckBox
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Terms"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="677dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="213dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="213dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="411dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="348dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="348dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="348dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="348dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Select01"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="298dp" />

</androidx.constraintlayout.widget.ConstraintLayout>